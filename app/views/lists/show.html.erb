<h1><%= @list.name %></h1>

<div class = "bookmarks">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"> <%= bookmark.comment %> </li>
    <li class="list-group-item"> <%= bookmark.movie.title + " - " + bookmark.movie.overview %> </li>
    <%= image_tag("#{bookmark.movie.poster_url}", alt: "#{bookmark.movie.title}") %>
    <div class = "trash">
      <%= link_to bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } do %>
        <div class = "icon">
          <div class = "lid"> </div>
          <div class="lidcap"> </div>
          <div class="bin"></div>
        </div>
      <% end %>
    </div>
    <div class = "edit">
      <%= link_to edit_bookmark_path(bookmark) do %>
      <i class="far fa-edit"></i>
      <% end %>
    </div>
  <% end %>
  <%= link_to 'Make a new Bookmark', new_list_bookmark_path(@list) %>
</div>
<p> <%= link_to "Back", lists_path %> </p>
